# CashTimeline â€” PRODUCTION environment variables
# Copy to .env on your production server and fill in your PRODUCTION values.
# KEEP THIS SECURE - Never commit .env to version control!

APP_NAME=CashTimeline
APP_ENV=production
APP_URL=https://yourdomain.com

# Database Configuration (Production)
DB_HOST=localhost
DB_NAME=cashtimeline_prod
DB_USER=cashtimeline_user
DB_PASS=your-strong-database-password-here
DB_CHARSET=utf8mb4

# Session
SESSION_NAME=cashtimeline_session

# Email Configuration (Production SMTP)
# Recommended: Use a dedicated email service for reliability
# Options: SendGrid, Mailgun, Amazon SES, Postmark, or your hosting provider's SMTP
SMTP_HOST=smtp.yourmailservice.com
SMTP_PORT=587
SMTP_ENCRYPTION=tls
SMTP_USERNAME=your-production-email@yourdomain.com
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=CashTimeline
SMTP_REPLY_TO_EMAIL=support@yourdomain.com
SMTP_REPLY_TO_NAME=CashTimeline Support
EMAIL_DEBUG_MODE=false

# SMS Configuration (Production Twilio)
TWILIO_ACCOUNT_SID=your-production-account-sid
TWILIO_AUTH_TOKEN=your-production-auth-token
TWILIO_PHONE_NUMBER=+1234567890
SMS_DEFAULT_COUNTRY_CODE=+1
SMS_DEBUG_MODE=false
